{
  "name": "ikas-ai-gateway",
  "version": "1.0.0",
  "description": "IKAS AI Gateway - Express.js/TypeScript service for LLM orchestration and MCP coordination",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/main.ts",
    "dev:docker": "tsx watch --clear-screen=false src/main.ts",
    "start": "node dist/main.js",
    "test": "jest",
    "test:integration": "jest --testPathPattern=integration",
    "test:with-services": "./scripts/test-with-services.sh",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write 'src/**/*.ts'",
    "type-check": "tsc --noEmit",
    "docker:dev": "cd ../docker && docker-compose -f docker-compose.dev.yml --profile hot-reload up ai-gateway-hot",
    "docker:dev:build": "cd ../docker && docker-compose -f docker-compose.dev.yml build ai-gateway-hot",
    "docker:dev:logs": "cd ../docker && docker-compose -f docker-compose.dev.yml logs -f ai-gateway-hot",
    "docker:dev:down": "cd ../docker && docker-compose -f docker-compose.dev.yml --profile hot-reload down",
    "docker:dev:restart": "npm run docker:dev:down && npm run docker:dev",
    "docker:hotreload": "cd ../docker && docker-compose -f docker-compose.dev.yml -f docker-compose.dev-hotreload.yml up ai-gateway"
  },
  "keywords": [
    "keycloak",
    "ai",
    "mcp",
    "llm",
    "typescript",
    "express"
  ],
  "author": "IKAS Development Team",
  "license": "MIT",
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "axios": "^1.11.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.19.2",
    "ioredis": "^5.4.1",
    "prom-client": "^15.1.3",
    "socket.io-client": "^4.8.1",
    "uuid": "^10.0.0",
    "winston": "^3.14.2",
    "ws": "^8.18.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.5.4",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.12",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.3",
    "supertest": "^7.1.4",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.0",
    "typescript": "^5.6.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
