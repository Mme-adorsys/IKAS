# Development environment variables for AI Gateway
# This file is used when NODE_ENV=development

# Application settings
NODE_ENV=development
PORT=8005
DEBUG=ikas:*

# Hot reload settings
TSX_WATCH=true
WATCH_IGNORE_PATHS="logs,node_modules,dist"

# Logging level for development
LOG_LEVEL=debug

# MCP Service URLs (Docker network)
KEYCLOAK_MCP_URL=http://keycloak-mcp:8001
NEO4J_MCP_URL=http://neo4j-mcp:8002

# WebSocket Server URL
WEBSOCKET_SERVER_URL=http://websocket-server:3001

# Redis URL for caching and pub/sub
REDIS_URL=redis://redis:6379

# Gemini API Key (should be set in environment or .env.local)
# GEMINI_API_KEY=your-actual-api-key-here

# Development specific settings
ENABLE_CORS=true
TRUST_PROXY=false

# Performance settings for development
REQUEST_TIMEOUT=30000
MAX_RETRY_ATTEMPTS=3
CIRCUIT_BREAKER_ENABLED=true