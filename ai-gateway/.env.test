# Test Environment Configuration for IKAS AI Gateway
NODE_ENV=test
PORT=8000

# Test-specific Gemini API key (placeholder for testing)
GEMINI_API_KEY=test-key-placeholder-will-not-call-real-api

# MCP Service URLs (pointing to mock test services)
KEYCLOAK_MCP_URL=http://localhost:8003
NEO4J_MCP_URL=http://localhost:8004

# Test Redis Configuration (different port to avoid conflicts)
REDIS_URL=redis://localhost:6380

# Health Check Configuration (faster for tests)
HEALTH_CHECK_TIMEOUT=3000
HEALTH_CHECK_INTERVAL=10000

# Circuit Breaker Configuration (more forgiving for tests)
CIRCUIT_BREAKER_FAILURE_THRESHOLD=10
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=5000

# Cache TTL Configuration (shorter for tests)
CACHE_TTL_USER_DATA=30
CACHE_TTL_COMPLIANCE_RESULTS=60
CACHE_TTL_GRAPH_ANALYSIS=120
CACHE_TTL_SYSTEM_METRICS=10

# Test Database URLs (avoiding conflicts with dev environment)
KEYCLOAK_URL=http://localhost:8081
NEO4J_URI=bolt://localhost:7688
NEO4J_HTTP_URI=http://localhost:7475

# Logging Configuration
LOG_LEVEL=debug
LOG_FILE=false  # Don't write log files during tests