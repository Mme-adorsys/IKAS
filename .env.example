# IKAS Environment Configuration
# Copy this file to .env and adjust values as needed

# =============================================================================
# KEYCLOAK CONFIGURATION
# =============================================================================
KEYCLOAK_URL=http://localhost:8080
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin

# =============================================================================
# NEO4J CONFIGURATION
# =============================================================================
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=password
NEO4J_DATABASE=neo4j

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://localhost:6379

# =============================================================================
# AI GATEWAY CONFIGURATION (Phase 1)
# =============================================================================
GEMINI_API_KEY=your-google-gemini-api-key-here
AI_GATEWAY_PORT=8000

# MCP Server URLs (for HTTP mode)
KEYCLOAK_MCP_URL=http://localhost:8001
NEO4J_MCP_URL=http://localhost:8002

# =============================================================================
# FRONTEND CONFIGURATION (Phase 2)
# =============================================================================
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=http://localhost:3001

# =============================================================================
# WEBSOCKET SERVER CONFIGURATION (Phase 2)
# =============================================================================
WS_PORT=3001

# =============================================================================
# DEVELOPMENT OPTIONS
# =============================================================================
NODE_ENV=development
LOG_LEVEL=debug

# Voice Recognition Settings
VOICE_LANGUAGE=de-DE
VOICE_HOTWORD=Hey Keycloak

# Demo Mode (for Amsterdam presentation)
DEMO_MODE=false
CACHE_DEMO_RESPONSES=false

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================
# PostgreSQL (for Keycloak)
POSTGRES_DB=keycloak
POSTGRES_USER=keycloak
POSTGRES_PASSWORD=keycloak

# =============================================================================
# MONITORING & OBSERVABILITY (Future)
# =============================================================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
JAEGER_PORT=16686